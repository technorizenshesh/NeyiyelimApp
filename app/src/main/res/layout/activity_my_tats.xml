<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.MyTatsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include android:id="@+id/lay_promo"
            layout="@layout/layout_header"/>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_promo"
            android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My ta₺ Store"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gain Points from each order"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/tetst"
                android:textColor="#808080"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                app:cardBackgroundColor="@color/white"
                android:elevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:contentPadding="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imghg"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:src="@drawable/iphone"
                    android:visibility="visible"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imghg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="iPhones, iPads, Playstation4"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/saad"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="#808080"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>



            </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert your ta₺'s to pleasure"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/drone"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="visible"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DJI Mavic Pro Folding Drone - 4K Stabilized Camera, Active Track, Avoidance, GPS"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="@dimen/_13sdp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_makeoffer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:backgroundTint="@color/purple_700"
                app:rippleColor="@color/white"
                app:cornerRadius="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:elevation="@dimen/_3sdp"
                android:textAllCaps="false"
                android:text="999000₺"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/drone"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="visible"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEW iPhone 7 PLUS 16GB Space-Gray UNLOCKED T-Mobile Straight Talk"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="@dimen/_13sdp" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:backgroundTint="@color/purple_700"
                app:rippleColor="@color/white"
                app:cornerRadius="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:elevation="@dimen/_3sdp"
                android:textAllCaps="false"
                android:text="999000₺"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:padding="@dimen/_5sdp"
                android:background="@color/red"

                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:padding="@dimen/_5sdp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="@dimen/_14sdp" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert your ta₺'s to charitable donation"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                app:cardBackgroundColor="@color/white"
                android:elevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:contentPadding="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imghg1"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/imhd"
                        android:visibility="visible"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imghg1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donate your Points to ,the Turkish Red Crescent, has one of the best disaster organizations of the world http://www.kizilay.org.tr/"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="#808080"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11sdp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5000.00 tat₺"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10₺ Donate"
                            android:padding="@dimen/_5sdp"
                            android:background="@color/red"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>





                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:padding="@dimen/_5sdp"
                    android:background="@color/red"

                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:padding="@dimen/_5sdp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>


        </LinearLayout>
        </androidx.core.widget.NestedScrollView>




    </RelativeLayout>


</layout>