<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.FAQActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include android:id="@+id/lay_promo"
            layout="@layout/layout_header"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_promo"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_PostDimg"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/questy"
                    android:visibility="visible" />


                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:drawableRight="@drawable/ic_down"
                    android:elevation="@dimen/_3sdp"
                    android:text="En Düşük Fiyat Garantili Menü"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal"
                    app:backgroundTint="@color/purple_700"
                    app:cornerRadius="@dimen/_10sdp"
                    app:rippleColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:text="@string/men_book"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_13sdp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:src="@drawable/ic_headphone" />

                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/videoo" />


                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:drawableRight="@drawable/ic_down"
                    android:drawableTint="@color/black"
                    android:elevation="@dimen/_3sdp"
                    android:text="Lowest Price and The Fastest Delivery Guaranteed"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="@dimen/_10sdp"
                    app:rippleColor="@color/white" />




                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:drawableRight="@drawable/ic_down"
                    android:drawableTint="@color/black"
                    android:elevation="@dimen/_3sdp"
                    android:text="How do I place an order?"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="@dimen/_10sdp"
                    app:rippleColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:drawableRight="@drawable/ic_down"
                    android:drawableTint="@color/black"
                    android:elevation="@dimen/_3sdp"
                    android:text="Are there extra costs"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="@dimen/_10sdp"
                    app:rippleColor="@color/white" />


                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:drawableRight="@drawable/ic_down"
                    android:drawableTint="@color/black"
                    android:elevation="@dimen/_3sdp"
                    android:text="How Order Points works?"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="@dimen/_10sdp"
                    app:rippleColor="@color/white" />


                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:drawableRight="@drawable/ic_down"
                    android:drawableTint="@color/black"
                    android:elevation="@dimen/_3sdp"
                    android:text="‘Tell a Friend’ and ‘Share Links’"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="@dimen/_10sdp"
                    app:rippleColor="@color/white" />









            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>


</layout>